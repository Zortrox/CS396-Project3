<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Tip"
			android:id="@+id/label_heading" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
			android:layout_alignParentEnd="true"
			android:background="#70afc5" android:padding="10dp"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Tip amount:"
			android:id="@+id/textView"
			android:layout_below="@+id/label_heading" android:layout_centerHorizontal="true"
			android:layout_marginTop="10dp"/>
	<SeekBar
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/seek_tip"
			android:layout_below="@+id/textView"
			android:layout_alignParentEnd="true" android:layout_alignParentStart="true"
			android:layout_marginTop="10dp" android:layout_marginBottom="20dp" android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="10"
			android:id="@+id/text_tip_percent"
			android:layout_below="@+id/seek_tip" android:layout_alignParentStart="true"
			android:layout_marginBottom="20dp" android:layout_marginLeft="50dp" android:enabled="true"
			android:focusable="true" android:focusableInTouchMode="true" android:inputType="number"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="0.00"
			android:id="@+id/text_tip_dollars"
			android:layout_below="@+id/seek_tip" android:layout_alignParentEnd="true" android:layout_marginRight="50dp"
			android:focusable="true" android:focusableInTouchMode="true" android:enabled="true"
			android:inputType="numberDecimal"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="%"
			android:id="@+id/textView2" android:layout_alignTop="@+id/text_tip_percent"
			android:layout_toEndOf="@+id/text_tip_percent"/>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			  android:textAppearance="?android:attr/textAppearanceLarge" android:text="$18.34"
			  android:id="@+id/text_total"
			  android:layout_marginLeft="-40dp"
			  android:layout_below="@+id/text_tip_percent" android:layout_toEndOf="@+id/textView"
			  android:layout_marginBottom="20dp"/>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
			  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Total (+tax):"
			  android:id="@+id/textView7"
			  android:layout_alignTop="@+id/text_total" android:layout_toStartOf="@+id/textView"
			  android:layout_marginRight="-40dp" android:layout_marginTop="2dp"/>
</RelativeLayout>
