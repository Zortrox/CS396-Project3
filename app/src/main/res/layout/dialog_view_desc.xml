<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Description"
			android:id="@+id/label_heading" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
			android:layout_alignParentEnd="true"
			android:background="#70afc5" android:padding="10dp"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Food Name"
			android:id="@+id/food_name" android:layout_below="@+id/label_heading"
			android:layout_alignParentStart="true" android:padding="10dp" android:textSize="18dp"
			android:layout_alignParentEnd="true" android:textStyle="bold"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Food description goes here"
			android:id="@+id/food_desc"
			android:layout_below="@+id/food_name" android:layout_alignParentStart="true" android:padding="10dp"
			android:layout_alignParentEnd="true"/>
</RelativeLayout>
