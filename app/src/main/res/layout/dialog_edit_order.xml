<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Edit Item"
			android:id="@+id/label_heading" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
			android:layout_alignParentEnd="true"
			android:background="#70afc5" android:padding="10dp"/>
	<NumberPicker
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/number_picker"
			android:orientation="vertical"
			android:layout_below="@+id/textView" android:layout_centerHorizontal="true"
			android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="New quantity:"
			android:id="@+id/textView"
			android:layout_below="@+id/label_heading" android:layout_centerHorizontal="true"
			android:layout_marginTop="10dp"/>
</RelativeLayout>
