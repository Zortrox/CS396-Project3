<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		tools:context="com.foxslash.cs396_project3.MainActivity"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent" android:layout_alignParentTop="true"
		android:layout_alignParentStart="true" android:weightSum="1">

<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/scrollView"
		android:layout_gravity="center_horizontal">

<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="90dp"
			android:layout_gravity="center_horizontal">
		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Order"
				android:id="@+id/add_food_1" android:layout_centerVertical="true" android:layout_alignParentEnd="true"
				android:layout_marginRight="5dp"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="Supah Burgah"
				android:id="@+id/text_food_1" android:layout_centerVertical="true" android:layout_alignParentStart="true"
				android:layout_toStartOf="@+id/text_price_1" android:layout_marginRight="20dp"
				android:layout_marginLeft="20dp"/>
		<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@android:color/darker_gray" android:layout_alignParentBottom="true"
				android:layout_alignParentEnd="true"/>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
				  android:textAppearance="?android:attr/textAppearanceLarge" android:text="$7.95"
				  android:id="@+id/text_price_1"
				  android:layout_marginRight="20dp" android:layout_centerVertical="true"
				  android:layout_toStartOf="@+id/add_food_1"/>
	</RelativeLayout>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="90dp"
			android:layout_gravity="center_horizontal">
		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Order"
				android:id="@+id/add_food_2" android:layout_centerVertical="true" android:layout_alignParentEnd="true"
				android:layout_marginRight="5dp"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="Supah Salad"
				android:id="@+id/text_food_2" android:layout_centerVertical="true" android:layout_alignParentStart="true"
				android:layout_toStartOf="@+id/text_price_2" android:layout_marginRight="20dp"
				android:layout_marginLeft="20dp"/>
		<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@android:color/darker_gray" android:layout_alignParentBottom="true"
				android:layout_alignParentEnd="true"/>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
				  android:textAppearance="?android:attr/textAppearanceLarge" android:text="$2.50"
				  android:id="@+id/text_price_2"
				  android:layout_marginRight="20dp" android:layout_centerVertical="true"
				  android:layout_toStartOf="@+id/add_food_2"/>
	</RelativeLayout>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="90dp"
			android:layout_gravity="center_horizontal">
		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Order"
				android:id="@+id/add_food_3" android:layout_centerVertical="true" android:layout_alignParentEnd="true"
				android:layout_marginRight="5dp"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="Supah Royale with Cheese"
				android:id="@+id/text_food_3" android:layout_centerVertical="true" android:layout_alignParentStart="true"
				android:layout_toStartOf="@+id/text_price_3" android:layout_marginRight="20dp"
				android:layout_marginLeft="20dp"/>
		<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@android:color/darker_gray" android:layout_alignParentBottom="true"
				android:layout_alignParentEnd="true"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="$8.95"
				android:id="@+id/text_price_3" android:layout_centerVertical="true"
				android:layout_toStartOf="@+id/add_food_3" android:layout_marginRight="20dp"/>
	</RelativeLayout>

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="90dp"
			android:layout_gravity="center_horizontal">
		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Order"
				android:id="@+id/add_food_4" android:layout_centerVertical="true" android:layout_alignParentEnd="true"
				android:layout_marginRight="5dp"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="Supah Snack"
				android:id="@+id/text_food_4" android:layout_centerVertical="true" android:layout_alignParentStart="true"
				android:layout_toStartOf="@+id/text_price_4" android:layout_marginRight="20dp"
				android:layout_marginLeft="20dp"/>
		<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@android:color/darker_gray" android:layout_alignParentBottom="true"
				android:layout_alignParentEnd="true"/>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
				  android:textAppearance="?android:attr/textAppearanceLarge" android:text="$1.00"
				  android:id="@+id/text_price_4"
				  android:layout_marginRight="20dp" android:layout_centerVertical="true"
				  android:layout_toStartOf="@+id/add_food_4"/>
	</RelativeLayout>
</LinearLayout>
</ScrollView>
</LinearLayout>
